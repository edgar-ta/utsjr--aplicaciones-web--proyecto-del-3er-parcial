<%- include("./templates/header.ejs"); %>

<link rel="stylesheet" href="/web/css/dashboard.css">
<main style="
padding-top: var(--navbar-height);
display: grid;
grid-template-columns: auto 1fr;
align-items: stretch;
justify-content: stretch;
">
    <%- include('./menu-lateral.ejs') %>
    <div class="dashboard__wrapper">
        <button class="sidebar__toggle-button" data-id="toggle-button" onclick="toggleSidebar()">Cerrar MenÃº</button>

        <% 
        if (typeof informacionDeRegistros == "undefined" && typeof informacionDeTablas != "undefined") { 
            %>

            <h1>
                <%- informacionDeTablas.baseDeDatosSeleccionada %>
            </h1>

            <div class="dashboard__card-container">
                <a href="/new/<%- informacionDeTablas.baseDeDatosSeleccionada %>/table" class="dashboard__table-card dashboard__table-card--new-card">
                    <span class="dashboard__table-card__name">
                        Crear tabla
                    </span>
                </a>
                <%
                    for (let tabla of informacionDeTablas.tablas) {
                %>
                    <a class="dashboard__table-card" href="/databases/<%- informacionDeTablas.baseDeDatosSeleccionada %>/<%- tabla %>">
                        <%= tabla %>
                    </a>
                <%
                }
                %>
            </div>

        <%
        } else if (typeof informacionDeRegistros != "undefined") {
            %>
            <%- 
                include("./tabla-de-registros");
            %>
            <%
        }
        %>
    </div>
</main>

<%- include("./templates/footer.ejs"); %>