                    <option value="int">INT</option>
                    <option value="varchar">VARCHAR</option>
                    <option value="date">DATE</option>
                    <option value="double">DOUBLE</option>
                </select>
            </td>
            <td>
                <input type="number" name="columnLengths" value="8" required>
            </td>
        </tr>
    </template>
