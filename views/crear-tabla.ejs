<%- include('./templates/long-header.ejs') %>

        <link rel="stylesheet" href="/web/css/crear-tabla.css">
        <template data-id="column-referenced-table-form-template">
            <div data-id="column-referenced-table-form">
                <h1>Tabla referenciada</h1>
                <select name="referencedTablesArray"required>
                    <option value="">Ninguna</option>
                    <% for (let tabla of tablas) { %>
                        <option value="<%- tabla.nombreInterno %>"><%- tabla.nombreExterno %></option>
                    <% } %>
                </select>
            </div>
        </template>

        <template data-id="column-template">
            <tr>
                <td data-id="column-index-cell">#</td>
                <td>
                    <input type="text" name="nameArray" required data-id="column-name">
                </td>
                <td data-id="column-type-cell">
                    <select name="dataTypeArray" required data-id="column-type-select">
                        <option value="integer" selected>
                            Entero
                        </option>
                        <option value="decimal">
                            Decimal
                        </option>
                        <option value="date">
                            Fecha
                        </option>
                        <option value="text">
                            Texto
                        </option>
                        <% if (tablas.length > 0) { %>
                            <option value="reference">
                                Referencia
                            </option>
                        <% } %>
                    </select>
                </td>
                <td>
                    <input type="radio" name="isPrimaryKeyArray" data-disabled-count="0" required data-id="column-is-primary-key">
                </td>
                <td>
                    <input type="checkbox" name="isNullableArray" data-disabled-count="0" data-id="column-is-nullable">
                </td>
                <td>
                    <input type="checkbox" name="isUniqueArray" data-disabled-count="0" data-id="column-is-unique">
                </td>
                <td>
                    <input type="checkbox" name="isAutoincrementableArray" data-disabled-count="0" data-id="column-is-autoincrementable">
                </td>
            </tr>
        </template>
        <section>
            <h1>Crear tabla</h1>
            <form action="/new/<%- baseDeDatosSeleccionada %>/table" id="createTableForm" method="post" data-id="table-creation-form">
                <div>
                    <label for="tableNameInput">Nombre de la tabla</label>
                    <input type="text" name="tableName" id="tableNameInput" placeholder="Nombre de la tabla">
                </div>
                <div>
                    <label for="columnCountInput">Número de columnas</label>
                    <input type="number" name="columnCount" id="columnCountInput" value="1" min="1" max="30">
                </div>
                <input type="submit" value="Crear tabla">
                <table id="tableExample">
                    <thead>
                        <tr>
                            <th>Índice</th>
                            <th>Nombre</th>
                            <th>Tipo de dato</th>
                            <th>Es clave primaria</th>
                            <th>Es nulo</th>
                            <th>Es único</th>
                            <th>Es autoincrementable</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </form>
        </section>
    </div>

<%- include('./templates/long-footer.ejs') %>
