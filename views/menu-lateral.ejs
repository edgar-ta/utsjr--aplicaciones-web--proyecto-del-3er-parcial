<%- include("./templates/header.ejs"); %>
<div>
    <div id="main">
        <button class="togglebtn" onclick="toggleNav()">Abrir Men√∫</button>
    </div>
    <div class="sidebar" id="sidebar">
<ul>
    <% 
    for (let baseDeDatos of basesDeDatos) {
        %>
        <li >
            <a href="/databases/<%- baseDeDatos %>">
                <%- baseDeDatos %>
            </a>
        
            <%
                if (typeof informacionDeRegistros != "undefined" && typeof informacionDeTablas != "undefined" && 
                informacionDeTablas.baseDeDatosSeleccionada == baseDeDatos) {
                    %>
                    
                        <ul>
                            <% 
                            for (let tabla of informacionDeTablas.tablas) {
                                %>
                                <li> 
                                    <a href="/databases/<%- baseDeDatos %>/<%- tabla %>"><%- tabla %></a>
                                </li>
                                <%
                            }
                            %>
                        </ul>
                    
                    <%
                }
            %>
        </li>
        <%
    }
    %>
</ul>
</div>
